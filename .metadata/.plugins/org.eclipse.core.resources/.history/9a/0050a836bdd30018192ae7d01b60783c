package com.springcloud.tutorial.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class HelloController {

	@RequestMapping("/request-mapping/{name}")
	public String hello1(@PathVariable String name) {
		return "Hello from @RequestMapping " + name;
	}
	
	@GetMapping("/get-mapping/{name}")
	public String hello2(@PathVariable String name) {
		return "Hello @GetMapping " + name;
	}
	
}
